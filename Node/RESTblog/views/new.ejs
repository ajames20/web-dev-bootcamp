<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Blog Post</div>
  
  <form class="ui form"action="/blogs" method="POST">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" placeholder="title" autofocus>
    </div>
    <div class="field">
      <label for="title">Image</label>
      <input type="text" name="blog[image]" placeholder="image url">
    </div>
    <div class="field">
      <label for="title">Blog Post</label>
      <textarea name="blog[body]"></textarea>
    </div>
    <input class="ui blue basic button big"type="submit">
  </form>
</div>

