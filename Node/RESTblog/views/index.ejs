<% include partials/header %>

<% blogs.forEach(blog => { %>
  <div>
    <h2><%= blog.title %></h2>
    <img src="<%= blog.image %>" alt="<%= blog.title %>">
    <p><%= blog.body.substring(0, 100) %> ...</p>
    <a class="ui button blue basic"href="/blogs/<%= blog._id %>">Read More</a>
  </div>
<% }) %>

<% include partials/footer %>